class QA
	types 
			public String = seq of char;
			
		instance variables
			private question: String;
			private answer: String;
			private correct: bool;
		
		operations
			public QA: String * String ==> QA
			QA(q, a)== 
			(
					question := q;
					answer := a;
					correct := false;
			);
			
			pure public getQuestion:() ==> String
	 		getQuestion()==(return question);	
	 		
	 		pure public getAnswer:() ==> String
	 		getAnswer()==(return answer);	
			
			pure public isCorrect:() ==> bool
	 		isCorrect()==(return correct);	
			
			public evalAnswer:String ==> bool
		  evalAnswer(ans)==(
		  	correct := ans = answer;
		  	return correct;
		  ); 

end QA