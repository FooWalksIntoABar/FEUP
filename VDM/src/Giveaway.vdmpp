class Giveaway is subclass of Promotion
	types
    public String = seq of char;
        
    instance variables
        private name: String;
        private percentage: int;
        private result: int;
        private math: MATH
    
  operations 
      public Giveaway: String * int ==> Giveaway
	  	 Giveaway(nam, p)==
	  	 (
	  		name := nam;
	  		percentage := p;
	  		result := 0;
	  		math := new MATH()
	  	 );
            
      pure public getName:() ==> String
	    getName()==(return name);
	    
	    pure public getPercentage:() ==> int
	    getPercentage()==(return percentage);
	    
	    pure public getResult:() ==> int
	    getResult()==(return result);
	    
      public learnResult:() ==> bool
		  learnResult()==(
		    result := math.rand(100);
		  	return result <= percentage;
		  ); 
		  
end Giveaway
