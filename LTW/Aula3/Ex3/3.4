body {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr; 
  grid-template-rows: 1fr 2fr 1fr;
  grid-template-areas: 
    "g g g"
    "y r b"
    "o o b"
}

#yellow {
  grid-area: y;
}

#red {
  grid-area: r;
}

#green {
  grid-area: g;
}

#orange {
  grid-area: o;
}

#blue {
  grid-area: b;
}

#yellow ul, #red ul {
  display: grid;
  grid-template-columns: 1fr 1fr; 
  grid-template-rows: 1fr 1fr;
}
