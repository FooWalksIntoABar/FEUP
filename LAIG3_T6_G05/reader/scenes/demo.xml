        </LIGHT>

    </LIGHTS>

    <!-- Textures -->
    <TEXTURES>

        <!-- Board -->
        <TEXTURE id="board">
            <file path="images/board.png" />
            <amplif_factor s="1.0" t="1.0" />
        </TEXTURE>

    </TEXTURES>


    <MATERIALS>

        <!-- A default material -->
        <MATERIAL id="defaultMaterial">
            <shininess value="10" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
        </MATERIAL>



    </MATERIALS>

    <!-- Animations -->

    <ANIMATIONS>

    </ANIMATIONS>



    <!-- The leaves -->
    <LEAVES>
    </LEAVES>


    <!-- The nodes -->
    <NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="board" />
        </DESCENDANTS>

    </NODE>

    <!-- The board -->
        <NODE id="board">
