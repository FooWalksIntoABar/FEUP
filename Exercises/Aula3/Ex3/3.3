body {
  display: grid;
  grid-template-columns: 1fr 3fr; 
  grid-template-rows: 1fr 1fr 1fr 1fr;
  grid-template-areas: 
    "y y"
    "b o"
    "b r"
    "b g"
}

#yellow {
  grid-area: y;
}

#red {
  grid-area: r;
}

#green {
  grid-area: g;
}

#orange {
  grid-area: o;
}

#blue {
  grid-area: b;
}

#yellow ul, #red ul {
  display: flex;
}

#red ul {
  flex-direction: row-reverse;
}

#yellow li, #red li {
  flex-grow: 1;
}

#yellow li:first-child {
  flex-grow: 3;
}
